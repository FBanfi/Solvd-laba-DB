<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.bank.dao.IPhoneDAO">
    <resultMap type="com.solvd.bank.domain.Phone"
               id="PhoneResultMap" autoMapping="false">
        <id column="id" property="id"/>
        <result column="number" property="number"/>
    </resultMap>
    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        Insert into Phones name values #{name}
        ]]>
    </insert>
    <update id="updateEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        Update Phones
        set name=${name}
        where id = ${id}
        ]]>
    </update>
    <delete id="removeEntity">
        <![CDATA[
        Delete
        from Phones
        where id = ${id}
        ]]>
    </delete>
    <select id="getEntityById" resultMap="PhoneResultMap">
        <![CDATA[
        Select *
        from Phones
        where id = ${id}
        ]]>
    </select>
</mapper>