<?xml version = "1.0" encoding = "UTF-8"?>

<mapper namespace="com.solvd.bank.dao.IAccountDAO" >
    <resultMap type="com.solvd.bank.domain.Account"
               id="AccountResultMap" autoMapping="false" >
        <id column="id" property="id" />
        <result column="balance" property="balance" />
        <result column="cbu" property="cbu" />
        <result column="alias" property="alias" />
    </resultMap>
    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Insert into Accounts (balance,cbu,alias) values (#{account.balance},#{account.cbu},#{account.alias})
        ]]>
    </insert>
    <update id="updateEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Update Accounts set balance=${account.balance},cbu=${account.cbu},alias=${account.alias} where id=${account.id}
        ]]>
    </update>
    <delete id="removeEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Delete from Accounts where id=${account.id}
        ]]>
    </delete>
    <select id="getEntityById" resultMap="AccountResultMap">
        <![CDATA[
            Select * from Accounts where id=${account.id}
        ]]>
    </select>
</mapper>