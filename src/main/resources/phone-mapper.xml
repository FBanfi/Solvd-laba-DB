<?xml version = "1.0" encoding = "UTF-8"?>

<mapper namespace="com.solvd.bank.dao.IPhoneDAO">
    <resultMap type="com.solvd.bank.domain.Phone"
               id="PhoneResultMap" autoMapping="false">
        <id column="id" property="id"/>
        <result column="number" property="number"/>
    </resultMap>
    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        Insert into Phones name values #{phone.name}
        ]]>
    </insert>
    <update id="updateEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        Update Phones
        set name=${phone.name}
        where id = ${phone.id}
        ]]>
    </update>
    <delete id="removeEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
        Delete
        from Phones
        where id = ${phone.id}
        ]]>
    </delete>
    <select id="getEntityById" resultMap="PhoneResultMap">
        <![CDATA[
        Select *
        from Phones
        where id = ${phone.id}
        ]]>
    </select>
</mapper>