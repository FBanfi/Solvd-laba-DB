<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.bank.dao.IManagerDAO" >
    <resultMap type="com.solvd.bank.domain.Manager"
               id="ManagerResultMap" autoMapping="false" >
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="lastName" property="lastName" />
        <result column="username" property="username" />
        <collection property="clients" resultMap="com.solvd.bank.dao.IClientDAO.ClientResultMap" />
    </resultMap>
    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Insert into Managers (name,lastName,username) values (#{manager.name},#{manager.lastName},#{manager.username})
        ]]>
    </insert>
    <update id="updateEntity" useGeneratedKeys="true" keyProperty="true">
        <![CDATA[
            Update Managers set name=${manager.name},lastName=${manager.lastName},username=${manager.username} where id=${manager.id}
        ]]>
    </update>
    <delete id="removeEntity">
        <![CDATA[
            Delete from Managers where id=${manager.id}
        ]]>
    </delete>
    <select id="getEntityById" resultMap="ManagerResultMap">
        <![CDATA[
            Select * from Managers where id=${manager.id}
        ]]>
    </select>
</mapper>